{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "NodeNext",
        "target": "ESNext",
        "moduleResolution": "nodenext",
        "sourceMap": true,
        "downlevelIteration": true,
        "paths": {
            "fumi/*": [ "./src/*" ]
        },
        "plugins": [
            { "transform": "typescript-transform-paths" }
        ],
        "skipLibCheck": true
    },
    "include": ["./src/**/*"]
}